<p style="color: green"><%= notice %></p>

<h1>Movies</h1>
<div class='flex justify-center border'>
  <div class='flex-col min-w-[350px] border-2 rounded-xl shadow-lg items-center justify-center px-4 py-2.5'>
    <div id="movies" class='text-center'>
      <%= @movie.title %>
      <br>
      <%= @movie.rating %>
      <div class= 'flex items-start justify-center px-1 py-2'>
        <% (0..@movie.rating.to_i/2).each do %>
          <%= image_tag 'star.svg' , style: 'width:20px'%>
        <% end %>
      </div>
    </div>
    <div class='flex justify-center'>
      <%= link_to "Next Suggestion",movies_path, class: ' w-fit bg-indigo-700 rounded-full px-5 py-2.5 text-white'%>
    </div>
  </div>
</div>
<%= link_to "New movie", new_movie_path %>
